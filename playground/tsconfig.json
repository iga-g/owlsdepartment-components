{
    "compilerOptions": {
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": ["ES2017", "ES7", "ES6", "DOM"],
        "target": "ESNext",
        "esModuleInterop": true,
        "baseUrl": "..",
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["playground/src/*"],
            "@components": ["src"],
            "@modules": ["src"],
            "~/*": ["playground/*"]
        }
    },
}
